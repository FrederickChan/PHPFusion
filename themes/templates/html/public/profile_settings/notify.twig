{{ opentable('Notification Setings') }}
<div class="mb-2">
    {{ fusion_get_settings('sitename') }} may still send you important notifications about your account and content
    outside of your preferred notification settings scope.
</div>
<div class="list-group spacer-md">
    {{ notify_openform|raw }}
    <div class="d-flex list-group-item align-items-center ps-3 pe-3 gap-3">
        <span class="me-2">{{ get_image('comments') }}</span>
        {{ comments|raw }}
    </div>
    <div class="d-flex list-group-item align-items-center ps-3 pe-3 gap-3">
        <span class="me-2">{{ get_image('mentions') }}</span>
        {{ mentions|raw }}
    </div>
    <div class="d-flex list-group-item align-items-center ps-3 pe-3 gap-3">
        <span class="me-2">{{ get_image('subscriptions') }}</span>
        {{ subscriptions|raw }}
    </div>
    <div class="d-flex list-group-item align-items-center ps-3 pe-3 gap-3">
        <span class="me-2">{{ get_image('birthdays') }}</span>
        {{ birthdays|raw }}
    </div>
    <div class="d-flex list-group-item align-items-center ps-3 pe-3 gap-3">
        <span class="me-2">{{ get_image('users') }}</span>
        {{ groups|raw }}
    </div>
    <div class="d-flex list-group-item align-items-center ps-3 pe-3 gap-3">
        <span class="me-2">{{ get_image('events') }}</span>
        {{ events|raw }}
    </div>
    <div class="d-flex list-group-item align-items-center ps-3 pe-3 gap-3">
        <span class="me-2">{{ get_image('messages_unread') }}</span>
        {{ messages|raw }}
    </div>
    <div class="d-flex list-group-item align-items-center ps-3 pe-3 gap-3">
        <span class="me-2">{{ get_image('updates') }}</span>
        {{ updates|raw }}
    </div>
    <div class="spacer-sm text-end">
        {{ notify_button|raw }}
    </div>
    {{ notify_closeform|raw }}
</div>
{{ closetable() }}
