<div class="register">
    <div class="container">
        <div class="row justify-content-center align-items-center vh-100 py-5">
            <div class="col-sm-10 col-md-8 col-lg-7 col-xl-6 col-xxl-5">
                <div class="card">
                    <div class="card-body">
                        <!--register_pre_idx-->
                        <div class="card-title text-center w-100 mt-4 mb-4">Create an account</div>
                        <div class="ps-5 pe-5">
                            {{ form_open|raw }}

                            {% if (check_get('validation')|length == 0) %}

                                {{ user_name|raw }}
                                {{ user_email|raw }}
                                {{ user_password|raw }}
                                {{ user_custom|raw }}

                            {% else %}
                                {{ validation|raw }}

                            {% endif %}

                            {{ button|raw }}
                            {{ form_close|raw }}

                            {% if (check_get('validation')|length == 0) %}
                                {{ terms|raw }}
                            {% endif %}

                            <div class="text-center strong mt-5 mb-5">
                                {{ locale['u400']|replace({ ('[SITENAME]') : fusion_get_settings('sitename') }) }}
                                <a href="{{ BASEDIR }}login.php">{{ locale['login'] }}</a>
                            </div>
                        </div>

                        <!--register_sub_idx-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
